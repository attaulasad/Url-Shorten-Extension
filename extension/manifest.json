{
  "manifest_version": 3,
  "name": "LinkedIn URL Shortener",
  "version": "1.0.0",
  "description": "A Chrome extension to shorten URLs for LinkedIn sharing",
  "action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ]
}
